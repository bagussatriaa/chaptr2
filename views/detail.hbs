<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Detail</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous' />
    <link rel='stylesheet' href='/assets/css/detail.css' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css'
      integrity='sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />

    <link href='https://fonts.googleapis.com/css2?family=Poppins&display=swap' rel='stylesheet' />
  </head>
  <body>
    <nav>
      <div class='nav-left'>
        <img src='/assets/img/download-removebg-preview.png' alt='logo' width='70' />
        <ul>
          <a href='/'>Home</a>
          <a href='/add-project'>My project</a>
        </ul>
      </div>
      <div class='nav-right'>
        <a href='/contact'>Contact Me</a>
      </div>
    </nav>

    <head>
      <h1>{{data.project_name}}</h1>
      <div class='container'>
        <img src='assets/lake geneva.jpg' alt='' />
        <div class='right'>
          <h2>Duration: {{data.duration}}</h2>
          <div class='date'>
            <i class='fa-solid fa-calendar-days'></i>
            <p class='fw-bolder'>{{data.startDate}} -</p>
            <p class='fw-bolder'>{{data.endDate}}</p>
          </div>
          <div class='duration'>
            <i class='fa-solid fa-clock'></i>
            <p>{{data.duration}}</p>
          </div>
          <div class='tech'>
            <h2>Technologies</h2>
            <div class='icons1'>
              {{#each data.tech}}
                <i class='fa-brands fa-{{this}}'></i>
                <p>Node Js</p>
              {{/each}}

            </div>
            <div class='icons2'>
              {{#if data.laravel}}
                <i class='fa-brands fa-laravel'></i>
                <p>Laravel</p>
              {{/if}}
              {{#if data.js}}
                <i class='fa-brands fa-js'></i>
                <p>Javascript</p>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      <main>
        {{data.desc}}
      </main>
    </head>
  </body>
</html>